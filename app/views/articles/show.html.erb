<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <%= @article.body %>
</p>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back home', articles_path %>

<h2>Add comment</h2>
<%= form_for (@article, @article.comments.build) do |f| %>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>